{
  "hosting": [
    {
      "target": "timeattack",
      "public": "dist/timeattack",
      "ignore": [
        "firebase.json",
        "firebase.rules",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "database": {
    "rules": "firebase.rules"
  }
}
